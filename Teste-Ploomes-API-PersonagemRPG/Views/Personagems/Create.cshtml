@model Teste_Ploomes_API_PersonagemRPG.Models.Personagem

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Personagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User" class="control-label">Autor: @User.Identity.Name</label>
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aparencia" class="control-label"></label>
                <textarea asp-for="Aparencia" class="form-control" rows="4" cols="50"></textarea>
                <span asp-validation-for="Aparencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Historia" class="control-label"></label>
                <textarea asp-for="Historia" class="form-control" rows="4" cols="50"></textarea>
                <span asp-validation-for="Historia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Minimo de 1 ponto ate maximo de 30 pontos somados</label>
            </div>
            <div class="form-group">
                <label asp-for="Forca" class="control-label"></label>
                <input asp-for="Forca" min="1" class="form-control" />
                <span asp-validation-for="Forca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agilidade" class="control-label"></label>
                <input asp-for="Agilidade" min="1" class="form-control" />
                <span asp-validation-for="Agilidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inteligencia" class="control-label"></label>
                <input asp-for="Inteligencia" min="1" class="form-control" />
                <span asp-validation-for="Inteligencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vitalidade" class="control-label"></label>
                <input asp-for="Vitalidade" min="1" class="form-control" />
                <span asp-validation-for="Vitalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carisma" class="control-label"></label>
                <input asp-for="Carisma" min="1" class="form-control" />
                <span asp-validation-for="Carisma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
